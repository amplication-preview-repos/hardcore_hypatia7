datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Authentication {
  createdAt  DateTime  @default(now())
  id         String    @id @default(cuid())
  token      String?
  updatedAt  DateTime  @updatedAt
  validUntil DateTime?
}

model User {
  createdAt DateTime @default(now())
  email     String?  @unique
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  password  String
  roles     Json
  updatedAt DateTime @updatedAt
  username  String   @unique
}
